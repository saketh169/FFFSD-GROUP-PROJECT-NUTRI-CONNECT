<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Documents - Organization</title>
    <link rel="stylesheet" href="Links/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            background: linear-gradient(135deg, #e8f5e9, #c8e6c9);
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }
        .upload-container {
            width: 100%;
            max-width: 650px;
            padding: 20px;
        }
        .upload-form {
            background: #ffffff;
            padding: 30px;
            border-radius: 15px;
            border: 3px solid #a3c293;
        }
        .upload-form:hover {
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
        }
        h2 {
            color: #2e7d32;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
        }
        .form-label {
            color: #388e3c;
            font-weight: bold;
        }
        .upload-container .form-select {
            border-radius: 5px;
            border: 1px solid #ccc;
            padding: 10px;
            background-color: #50c878;
            color: white;
            cursor: pointer;
        }
        .upload-container .form-select option {
            background-color: #90ee90;
            color: #333;
        }
        .upload-container .form-select option:hover {
            background-color: #218838;
            color: white;
        }
        .btn-success {
            background-color: #4CAF50;
            border: none;
            border-radius: 8px;
            padding: 12px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }
        .btn-success:hover {
            background-color: #388e3c;
        }
        .form-control:disabled {
            background-color: #e9ecef;
            cursor: not-allowed;
        }
        .invalid-feedback {
            color: #dc3545;
            font-size: 0.875em;
            margin-top: 5px;
        }
        .optional-msg {
            color: #6c757d;
            font-size: 0.875em;
            margin-top: 5px;
        }
        #successMessage {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(76, 175, 80, 0.9); /* Less transparent green */
            color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            z-index: 1000;
            text-align: center;
            width: 300px;
            display: none;
        }
        #cross {
            position: fixed;
            top: 5px;
            left: 10px;
            line-height: 20px;
            font-size: 40px;
            border-radius: 100%;
        }
        </style>
      </head>
    <body>
    
    <!-- Back Button -->
    <div id="cross" class="btn btn-outline-success" onclick="window.history.back();">
        <i class="fa-solid fa-xmark"></i>
    </div>
    
    <div class="upload-container">
        <form id="documentUploadForm" class="upload-form needs-validation"
              method="POST" enctype="multipart/form-data"
              onsubmit="return handleDocumentUpload(event)" novalidate
              data-redirect="organization.html">
            <h2>Upload Documents - Organization</h2>

            <!-- Organization Logo -->
            <div class="mb-4">
                <label for="orgLogo" class="form-label">Organization Logo (Image, max 2MB):</label>
                <input id="orgLogo" type="file" class="form-control" accept=".jpg,.png,.jpeg" required />
                <div class="invalid-feedback">Please upload your organization logo (Image, max 2MB).</div>
            </div>

            <!-- Organization Brochure -->
            <div class="mb-4">
                <label for="orgBrochure" class="form-label">Organization Brochure (PDF, max 20MB):</label>
                <input id="orgBrochure" type="file" class="form-control" accept=".pdf" required />
                <div class="invalid-feedback">Please upload your organization brochure (PDF, max 20MB).</div>
            </div>

            <!-- Legal Registration Documents -->
            <div class="mb-4">
                <label for="legalDocumentType" class="form-label">Legal Document Type:</label>
                <select id="legalDocumentType" class="form-select" required>
                    <option value="" disabled selected hidden>Select legal document type</option>
                    <option value="certificateOfIncorporation">Certificate of Incorporation</option>
                    <option value="articlesOfAssociation">Articles of Association</option>
                    <option value="memorandumOfAssociation">Memorandum of Association</option>
                </select>
                <div class="invalid-feedback">Please select a legal document type.</div>
                <label for="legalDocument" class="form-label mt-2">Legal Document (PDF, max 5MB):</label>
                <input id="legalDocument" type="file" class="form-control" accept=".pdf" required disabled />
                <div class="invalid-feedback">Please upload your legal document (PDF, max 5MB).</div>
            </div>

            <!-- Tax Identification Documents -->
            <div class="mb-4">
                <label for="taxDocumentType" class="form-label">Tax Document Type:</label>
                <select id="taxDocumentType" class="form-select" required>
                    <option value="" disabled selected hidden>Select tax document type</option>
                    <option value="gstCertificate">GST Certificate</option>
                    <option value="panCard">PAN Card</option>
                    <option value="tinCertificate">TIN Certificate</option>
                </select>
                <div class="invalid-feedback">Please select a tax document type.</div>
                <label for="taxDocument" class="form-label mt-2">Tax Document (PDF, max 5MB):</label>
                <input id="taxDocument" type="file" class="form-control" accept=".pdf" required disabled />
                <div class="invalid-feedback">Please upload your tax document (PDF, max 5MB).</div>
            </div>

            <!-- Proof of Address -->
            <div class="mb-4">
                <label for="addressProofType" class="form-label">Proof of Address Type:</label>
                <select id="addressProofType" class="form-select" required>
                    <option value="" disabled selected hidden>Select proof of address type</option>
                    <option value="utilityBill">Utility Bill</option>
                    <option value="leaseAgreement">Lease Agreement</option>
                    <option value="propertyTaxReceipt">Property Tax Receipt</option>
                </select>
                <div class="invalid-feedback">Please select a proof of address type.</div>
                <label for="addressProof" class="form-label mt-2">Proof of Address (PDF/Image, max 5MB):</label>
                <input id="addressProof" type="file" class="form-control" accept=".pdf,.jpg,.png" required disabled />
                <div class="invalid-feedback">Please upload your proof of address (PDF/Image, max 5MB).</div>
            </div>

            <!-- Business License -->
            <div class="mb-4">
                <label for="businessLicenseType" class="form-label">Business License Type:</label>
                <select id="businessLicenseType" class="form-select" required>
                    <option value="" disabled selected hidden>Select business license type</option>
                    <option value="generalLicense">General Business License</option>
                    <option value="industrySpecificLicense">Industry-Specific License</option>
                </select>
                <div class="invalid-feedback">Please select a business license type.</div>
                <label for="businessLicense" class="form-label mt-2">Business License (PDF, max 5MB):</label>
                <input id="businessLicense" type="file" class="form-control" accept=".pdf" required disabled />
                <div class="invalid-feedback">Please upload your business license (PDF, max 5MB).</div>
            </div>

            <!-- Identity Proof of Authorized Representative -->
            <div class="mb-4">
                <label for="authorizedRepIdType" class="form-label">Identity Proof Type:</label>
                <select id="authorizedRepIdType" class="form-select" required>
                    <option value="" disabled selected hidden>Select identity proof type</option>
                    <option value="aadhaarCard">Aadhaar Card</option>
                    <option value="passport">Passport</option>
                    <option value="driversLicense">Driver's License</option>
                </select>
                <div class="invalid-feedback">Please select an identity proof type.</div>
                <label for="authorizedRepId" class="form-label mt-2">Identity Proof (PDF/Image, max 5MB):</label>
                <input id="authorizedRepId" type="file" class="form-control" accept=".pdf,.jpg,.png" required disabled />
                <div class="invalid-feedback">Please upload identity proof (PDF/Image, max 5MB).</div>
            </div>

            <!-- Bank Account Details -->
            <div class="mb-4">
                <label for="bankDocumentType" class="form-label">Bank Document Type:</label>
                <select id="bankDocumentType" class="form-select" required>
                    <option value="" disabled selected hidden>Select bank document type</option>
                    <option value="cancelledCheque">Cancelled Cheque</option>
                    <option value="bankStatement">Bank Statement</option>
                </select>
                <div class="invalid-feedback">Please select a bank document type.</div>
                <label for="bankDocument" class="form-label mt-2">Bank Document (PDF, max 5MB):</label>
                <input id="bankDocument" type="file" class="form-control" accept=".pdf" required disabled />
                <div class="invalid-feedback">Please upload your bank document (PDF, max 5MB).</div>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-success">Submit Documents</button>
            </div>
        </form>
    </div>

   

    <!-- <script src="/js/port.js"></script> -->

    <script>
        // Function to handle form submission
        
    async function handleDocumentUpload(event) {
        event.preventDefault();

        // Enable all file inputs before submission
        document.querySelectorAll('input[type="file"]').forEach(input => {
            input.disabled = false;
        });

        // Reset validation state
        resetValidation();

        // Validate form fields
        const isValid = validateForm();

        if (isValid) {
            // Create a FormData object
            const formData = new FormData();

            // Append all form data to the FormData object
            formData.append('orgLogo', document.getElementById('orgLogo').files[0]);
            formData.append('orgBrochure', document.getElementById('orgBrochure').files[0]);
            formData.append('legalDocumentType', document.getElementById('legalDocumentType').value);
            formData.append('legalDocument', document.getElementById('legalDocument').files[0]);
            formData.append('taxDocumentType', document.getElementById('taxDocumentType').value);
            formData.append('taxDocument', document.getElementById('taxDocument').files[0]);
            formData.append('addressProofType', document.getElementById('addressProofType').value);
            formData.append('addressProof', document.getElementById('addressProof').files[0]);
            formData.append('businessLicenseType', document.getElementById('businessLicenseType').value);
            formData.append('businessLicense', document.getElementById('businessLicense').files[0]);
            formData.append('authorizedRepIdType', document.getElementById('authorizedRepIdType').value);
            formData.append('authorizedRepId', document.getElementById('authorizedRepId').files[0]);
            formData.append('bankDocumentType', document.getElementById('bankDocumentType').value);
            formData.append('bankDocument', document.getElementById('bankDocument').files[0]);

            try {
                // Send the data to the server
                const response = await fetch(`/organization-doc/upload`, {
                    // `http://localhost:${PORT}/organization-doc/upload`
                    method: 'POST',
                    body: formData, // Use FormData directly
                });
                
                if (response.ok) {
                    alert("Documents Uploaded Successfully"); 
                    setTimeout(() => {
                        window.location.href = "/organization"; 
                    }, 10); 
                } else {
                    alert("Upload failed!");
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while uploading the documents. Please try again.');
            }
        }
    }
        // Function to reset validation state
        function resetValidation() {
            // Remove 'is-invalid' class from all fields
            document.querySelectorAll('.is-invalid').forEach((el) => {
                el.classList.remove('is-invalid');
            });

            // Hide all invalid feedback messages
            document.querySelectorAll('.invalid-feedback').forEach((el) => {
                el.style.display = 'none';
            });
        }

        // Enable file inputs when dropdowns are selected
        document.getElementById('legalDocumentType').addEventListener('change', function() {
            document.getElementById('legalDocument').disabled = false;
        });
        document.getElementById('taxDocumentType').addEventListener('change', function() {
            document.getElementById('taxDocument').disabled = false;
        });
        document.getElementById('addressProofType').addEventListener('change', function() {
            document.getElementById('addressProof').disabled = false;
        });
        document.getElementById('businessLicenseType').addEventListener('change', function() {
            document.getElementById('businessLicense').disabled = false;
        });
        document.getElementById('authorizedRepIdType').addEventListener('change', function() {
            document.getElementById('authorizedRepId').disabled = false;
        });
        document.getElementById('bankDocumentType').addEventListener('change', function() {
            document.getElementById('bankDocument').disabled = false;
        });

        // Function to validate form fields
        function validateForm() {
            const maxOrgLogoSize = 2 * 1024 * 1024; // 2MB
            const maxOrgBrochureSize = 20 * 1024 * 1024; // 20MB
            const maxLegalDocumentSize = 5 * 1024 * 1024; // 5MB
            const maxTaxDocumentSize = 5 * 1024 * 1024; // 5MB
            const maxAddressProofSize = 5 * 1024 * 1024; // 5MB
            const maxBusinessLicenseSize = 5 * 1024 * 1024; // 5MB
            const maxAuthorizedRepIdSize = 5 * 1024 * 1024; // 5MB
            const maxBankDocumentSize = 5 * 1024 * 1024; // 5MB

            let isValid = true;

            // Validate required fields
            if (!document.getElementById('orgLogo').files[0]) {
                showInvalidFeedback(document.getElementById('orgLogo'), "Please upload your organization logo.");
                isValid = false;
            } else if (document.getElementById('orgLogo').files[0].size > maxOrgLogoSize) {
                showInvalidFeedback(document.getElementById('orgLogo'), "Organization logo file size exceeds 2MB.");
                isValid = false;
            }

            if (!document.getElementById('orgBrochure').files[0]) {
                showInvalidFeedback(document.getElementById('orgBrochure'), "Please upload your organization brochure.");
                isValid = false;
            } else if (document.getElementById('orgBrochure').files[0].size > maxOrgBrochureSize) {
                showInvalidFeedback(document.getElementById('orgBrochure'), "Organization brochure file size exceeds 20MB.");
                isValid = false;
            }

            if (!document.getElementById('legalDocumentType').value) {
                showInvalidFeedback(document.getElementById('legalDocumentType'), "Please select a legal document type.");
                isValid = false;
            } else if (!document.getElementById('legalDocument').files[0]) {
                showInvalidFeedback(document.getElementById('legalDocument'), "Please upload your legal document.");
                isValid = false;
            } else if (document.getElementById('legalDocument').files[0].size > maxLegalDocumentSize) {
                showInvalidFeedback(document.getElementById('legalDocument'), "Legal document file size exceeds 5MB.");
                isValid = false;
            }

            if (!document.getElementById('taxDocumentType').value) {
                showInvalidFeedback(document.getElementById('taxDocumentType'), "Please select a tax document type.");
                isValid = false;
            } else if (!document.getElementById('taxDocument').files[0]) {
                showInvalidFeedback(document.getElementById('taxDocument'), "Please upload your tax document.");
                isValid = false;
            } else if (document.getElementById('taxDocument').files[0].size > maxTaxDocumentSize) {
                showInvalidFeedback(document.getElementById('taxDocument'), "Tax document file size exceeds 5MB.");
                isValid = false;
            }

            if (!document.getElementById('addressProofType').value) {
                showInvalidFeedback(document.getElementById('addressProofType'), "Please select a proof of address type.");
                isValid = false;
            } else if (!document.getElementById('addressProof').files[0]) {
                showInvalidFeedback(document.getElementById('addressProof'), "Please upload your proof of address.");
                isValid = false;
            } else if (document.getElementById('addressProof').files[0].size > maxAddressProofSize) {
                showInvalidFeedback(document.getElementById('addressProof'), "Proof of address file size exceeds 5MB.");
                isValid = false;
            }

            if (!document.getElementById('businessLicenseType').value) {
                showInvalidFeedback(document.getElementById('businessLicenseType'), "Please select a business license type.");
                isValid = false;
            } else if (!document.getElementById('businessLicense').files[0]) {
                showInvalidFeedback(document.getElementById('businessLicense'), "Please upload your business license.");
                isValid = false;
            } else if (document.getElementById('businessLicense').files[0].size > maxBusinessLicenseSize) {
                showInvalidFeedback(document.getElementById('businessLicense'), "Business license file size exceeds 5MB.");
                isValid = false;
            }

            if (!document.getElementById('authorizedRepIdType').value) {
                showInvalidFeedback(document.getElementById('authorizedRepIdType'), "Please select an identity proof type.");
                isValid = false;
            } else if (!document.getElementById('authorizedRepId').files[0]) {
                showInvalidFeedback(document.getElementById('authorizedRepId'), "Please upload identity proof.");
                isValid = false;
            } else if (document.getElementById('authorizedRepId').files[0].size > maxAuthorizedRepIdSize) {
                showInvalidFeedback(document.getElementById('authorizedRepId'), "Identity proof file size exceeds 5MB.");
                isValid = false;
            }

            if (!document.getElementById('bankDocumentType').value) {
                showInvalidFeedback(document.getElementById('bankDocumentType'), "Please select a bank document type.");
                isValid = false;
            } else if (!document.getElementById('bankDocument').files[0]) {
                showInvalidFeedback(document.getElementById('bankDocument'), "Please upload your bank document.");
                isValid = false;
            } else if (document.getElementById('bankDocument').files[0].size > maxBankDocumentSize) {
                showInvalidFeedback(document.getElementById('bankDocument'), "Bank document file size exceeds 5MB.");
                isValid = false;
            }

            return isValid;
        }

        // Function to display invalid feedback for a field
        function showInvalidFeedback(field, message) {
            const invalidFeedback = field.nextElementSibling;
            if (invalidFeedback && invalidFeedback.classList.contains('invalid-feedback')) {
                invalidFeedback.textContent = message;
                invalidFeedback.style.display = 'block';
            }
            field.classList.add('is-invalid');
        }
    </script>
</body>
</html>