                    <td>
                        <button class="action-btn" title="View Profile" onclick="viewClient(${client.id})">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="action-btn" title="Chat" onclick="openChat(${client.id})">
                            <i class="fas fa-comment"></i>
                        </button>
                        <button class="action-btn" title="Reports" onclick="viewReports(${client.id})">
                            <i class="fas fa-file-medical"></i>
                        </button>
                    </td>
                `;
                tbody.appendChild(row);
            });
            
            // Update pagination controls
            updatePaginationControls(totalPages);
        }

        // Update pagination controls
        function updatePaginationControls(totalPages) {
            const pagination = document.getElementById("pagination");
            pagination.innerHTML = "";
            
            // Only show pagination if more than one page
            if (totalPages <= 1) return;
            
            // Previous button
            const prevItem = document.createElement("li");
            prevItem.className = `page-item ${currentPage === 1 ? 'disabled' : ''}`;
            prevItem.innerHTML = `<a class="page-link" href="#" onclick="changePage(${currentPage - 1})">&laquo;</a>`;
            pagination.appendChild(prevItem);
            
            // Page numbers
            for (let i = 1; i <= totalPages; i++) {
                const pageItem = document.createElement("li");
                pageItem.className = `page-item ${currentPage === i ? 'active' : ''}`;
                pageItem.innerHTML = `<a class="page-link" href="#" onclick="changePage(${i})">${i}</a>`;
                pagination.appendChild(pageItem);
            }
            
            // Next button
            const nextItem = document.createElement("li");
            nextItem.className = `page-item ${currentPage === totalPages ? 'disabled' : ''}`;
            nextItem.innerHTML = `<a class="page-link" href="#" onclick="changePage(${currentPage + 1})">&raquo;</a>`;
            pagination.appendChild(nextItem);
        }

        // Change page
        function changePage(page) {
            populateTable(page);
        }

        // View client details - redirects to client profile
        function viewClient(id) {
            alert(`Redirecting to client ${id} profile...`);
           
        }

        // Open chat with client - redirects to chat page
        function openChat(id) {
            alert(`Opening chat with client ${id}...`);
            window.location.href = `/chat_dietitian`;
        }

        // View client reports - redirects to reports page
        function viewReports(id) {
            alert(`Viewing reports for client ${id}...`);
            window.location.href = `/Lab_diet`;
        }

        // Initialize the page
        document.addEventListener("DOMContentLoaded", function() {
            populateTable(1);
        });
    </script>
