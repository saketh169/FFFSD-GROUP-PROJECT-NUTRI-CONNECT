        document.querySelector(`.sidebar .day[onclick="showAppointments('${day}')"]`).classList.add('active');
        
        // Render appointments for the selected day
        renderAppointments(day);
      }

      // Toggle available slots highlighting
      function toggleAvailableSlots() {
        const container = document.getElementById('appointments-container');
        container.classList.toggle('highlight-available');
      }

      // Toggle block slots form visibility
      function toggleBlockSlotsForm() {
        const form = document.getElementById('blockSlotsForm');
        form.style.display = form.style.display === 'block' ? 'none' : 'block';
      }

      // Block selected time slots
      function blockSlots() {
        const day = document.getElementById('blockDay').value;
        const startTime = document.getElementById('blockStartTime').value;
        const endTime = document.getElementById('blockEndTime').value;
        const reason = document.getElementById('blockReason').value || 'Blocked by dietician';
        
        if (!startTime || !endTime) {
          alert('Please select both start and end times');
          return;
        }
        
        // Convert times to 24-hour format for comparison
        const start24 = convertTimeTo24HourFormat(startTime);
        const end24 = convertTimeTo24HourFormat(endTime);
        
        if (start24 >= end24) {
          alert('End time must be after start time');
          return;
        }
        
        // Find all available appointments in the selected day that fall within the time range
        const dayAppointments = scheduleData.appointments.filter(app => 
          app.day === day && 
          app.status === 'available' && 
          isTimeInRange(app.time, start24, end24)
        );
        
        if (dayAppointments.length === 0) {
          alert('No available slots found in the selected time range');
          return;
        }
        
        // Block the slots
        dayAppointments.forEach(app => {
          app.status = 'blocked';
          app.title = 'Blocked Time';
          app.description = reason;
          app.client_name = 'Blocked';
        });
        
        // Refresh the view
        renderAppointments(day);
        
        // Hide the form
        toggleBlockSlotsForm();
        
        // Show success message
        alert(`${dayAppointments.length} slots have been blocked successfully!`);
      }

      // Helper function to convert time to 24-hour format
      function convertTimeTo24HourFormat(time) {
        const [hours, minutes] = time.split(':');
        return parseInt(hours) * 100 + parseInt(minutes);
      }

      // Helper function to check if a time string falls within a range
      function isTimeInRange(timeStr, start24, end24) {
        // Convert appointment time to 24-hour format
        const timeParts = timeStr.split(' ');
        const time = timeParts[0];
        const modifier = timeParts[1];
        
        let [hours, minutes] = time.split(':');
        hours = parseInt(hours);
        minutes = parseInt(minutes);
        
        if (modifier === 'PM' && hours !== 12) {
          hours += 12;
        } else if (modifier === 'AM' && hours === 12) {
          hours = 0;
        }
        
        const time24 = hours * 100 + minutes;
        return time24 >= start24 && time24 <= end24;
      }

      // Export schedule function
      function exportSchedule() {
        // In a real app, this would export to PDF or CSV
        alert('Schedule exported successfully! (This would download a PDF/CSV in a real application)');
      }

