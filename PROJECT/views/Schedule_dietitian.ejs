      document.addEventListener('DOMContentLoaded', () => {
        renderSidebar();
        
        // Start with today's appointments or Monday if today is Sunday
        const today = new Date();
        const todayDayName = getDayName(today).toLowerCase();
        
        if (scheduleData.days[todayDayName] && todayDayName !== 'sunday') {
          renderAppointments(todayDayName);
        } else {
          renderAppointments('monday');
        }
        
        // Add click handlers for sidebar days
        document.querySelectorAll('.sidebar .day').forEach(day => {
          day.addEventListener('click', function() {
            const dayKey = this.getAttribute('onclick').match(/'([^']+)'/)[1];
            showAppointments(dayKey);
          });
        });
        
        // Right sidebar toggle functionality
        const rightSidebar = document.getElementById('rightSidebar');
        const rightSidebarTrigger = document.getElementById('rightSidebarTrigger');
        
        rightSidebarTrigger.addEventListener('click', () => {
          rightSidebar.classList.toggle('open');
          rightSidebarTrigger.classList.toggle('open');
        });
        
        // Close right sidebar when clicking outside
        document.addEventListener('click', (e) => {
          if (!rightSidebar.contains(e.target) && 
              !rightSidebarTrigger.contains(e.target) &&
              rightSidebar.classList.contains('open')) {
            rightSidebar.classList.remove('open');
            rightSidebarTrigger.classList.remove('open');
          }
        });
      });
    </script>
