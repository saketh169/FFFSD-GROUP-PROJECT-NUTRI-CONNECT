      <div class="status-indicators">
        <h5><i class="fas fa-info-circle"></i> Status Indicators</h5>
        <div class="status-item">
          <div class="status-color status-available"></div>
          <span>Available Slots</span>
        </div>
        <div class="status-item">
          <div class="status-color status-booked"></div>
          <span>Booked Appointments</span>
        </div>
        <div class="status-item">
          <div class="status-color status-blocked"></div>
          <span>Blocked Time</span>
        </div>
        <div class="status-item">
          <div class="status-color status-workshop"></div>
          <span>Workshops</span>
        </div>
        <div class="status-item">
          <div class="status-color status-followup"></div>
          <span>Follow-ups</span>
        </div>
      </div>
    </div>

     
