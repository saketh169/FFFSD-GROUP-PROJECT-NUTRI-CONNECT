<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dietician Diet Plans</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        /* General Styles */
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #e0f7fa, #b2ebf2);
            color: #333;
            margin: 0;
            padding: 0;
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            border: 2px solid #007bff; /* Outer box border */
        }

        h1 {
            text-align: center;
            color: #007bff;
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        h1 i {
            margin-right: 10px;
            color: #007bff;
        }

        .back-button {
            margin-bottom: 20px;
        }

        .back-button button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: #fff;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .back-button button:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }


        /* Form Section */
        .form-section {
            margin-bottom: 30px;
            padding: 20px;
            background: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .form-section:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .form-section input,
        .form-section select,
        .form-section textarea {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }

        .form-section input:focus,
        .form-section select:focus,
        .form-section textarea:focus {
            border-color: #007bff;
            outline: none;
        }

        .form-section textarea {
            resize: vertical;
            height: 100px;
        }

        .form-section button {
            padding: 12px 24px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: #fff;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .form-section button:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }

        .form-section button:active {
            transform: translateY(0);
        }

        /* Cards Section */
        .cards-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }

        .card {
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: left;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: 2px solid #007bff; /* Card border */
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            background-color: #f0f8ff; /* Light blue background on hover */
        }

        .card h3 {
            margin: 0 0 10px;
            color: #007bff;
            font-size: 1.5rem;
        }

        .card h3 i {
            margin-right: 10px;
            color: #007bff;
        }

        .card p {
            margin: 5px 0;
            color: #666;
            font-size: 1rem;
        }

        .card ul {
            margin: 10px 0 0;
            padding-left: 20px;
        }

        .card ul li {
            margin: 5px 0;
            color: #555;
            font-size: 0.95rem;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .container {
                padding: 15px;
            }

            h1 {
                font-size: 2rem;
            }

            .cards-container {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Back Button -->
        <div class="back-button">
            <button onclick="history.back()"><i class="fas fa-arrow-left"></i> Back</button>
        </div>

        <h1><i class="fas fa-utensils"></i> Dietician Diet Plans</h1>

        <!-- Form Section -->
        <div class="form-section">
            <input type="text" id="dietitian-name" placeholder="Enter Dietitian Name">
            <select id="diet-type">
                <option value="" disabled selected>Select Diet Type</option>
                <option value="Keto">Keto</option>
                <option value="Vegan">Vegan</option>
                <option value="Vegetarian">Vegetarian</option>
                <option value="Low-Calorie">Low-Calorie</option>
                <option value="Mediterranean">Mediterranean</option>
                <option value="Paleo">Paleo</option>
            </select>
            <input type="number" id="calories" placeholder="Enter Calories (e.g., 1800)">
            <textarea id="meals" placeholder="Enter Meals (one per line)"></textarea>
            <button onclick="addPlan()"><i class="fas fa-plus"></i> Add Plan</button>
        </div>

        <!-- Cards Section -->
        <div class="cards-container" id="cards-container">
            <!-- Cards will be dynamically added here -->
        </div>
    </div>

    <script>
        // Function to add a new plan
        function addPlan() {
            const dietitianName = document.getElementById("dietitian-name").value.trim();
            const dietType = document.getElementById("diet-type").value.trim();
            const calories = document.getElementById("calories").value.trim();
            const meals = document.getElementById("meals").value.trim();

            if (!dietitianName || !dietType || !calories || !meals) {
                alert("Please fill out all fields.");
                return;
            }

            const cardsContainer = document.getElementById("cards-container");

            // Create a new card
            const card = document.createElement("div");
            card.className = "card";

            // Format meals as a list
            const mealsList = meals.split("\n").map(meal => `<li>${meal}</li>`).join("");

            card.innerHTML = `
                <h3><i class="fas fa-user-md"></i> ${dietitianName}</h3>
                <p><strong>Diet Type:</strong> ${dietType}</p>
                <p><strong>Calories:</strong> ${calories}</p>
                <ul>${mealsList}</ul>
            `;

            // Append the card to the container
            cardsContainer.appendChild(card);

            // Clear input fields
            document.getElementById("dietitian-name").value = "";
            document.getElementById("diet-type").value = "";
            document.getElementById("calories").value = "";
            document.getElementById("meals").value = "";
        }

        // Generate default cards on page load (optional)
        const defaultPlans = [
            {
                dietitian: "Dr. Rahul Mehta",
                dietType: "Vegetarian",
                calories: "1500",
                meals: [
                    "Breakfast: Whole wheat toast with peanut butter and banana",
                    "Lunch: Paneer curry with brown rice and spinach",
                    "Snack: Yogurt with flaxseeds and honey",
                    "Dinner: Lentil soup with whole grain pita bread"
                ]
            },
            {
                dietitian: "Dr. Lisa Brown",
                dietType: "Low-Calorie",
                calories: "1200",
                meals: [
                    "Breakfast: Scrambled egg whites with whole wheat toast",
                    "Lunch: Grilled chicken salad with balsamic vinaigrette",
                    "Snack: Low-fat Greek yogurt with almonds",
                    "Dinner: Steamed salmon with roasted vegetables"
                ]
            },
            {
                dietitian: "Dr. Emily Carter",
                dietType: "Keto",
                calories: "1800",
                meals: [
                    "Breakfast: Avocado and eggs with bacon",
                    "Lunch: Grilled chicken with avocado and spinach",
                    "Snack: Cheese and nuts",
                    "Dinner: Beef steak with broccoli and butter"
                ]
            },
            {
                dietitian: "Dr. John Doe",
                dietType: "Mediterranean",
                calories: "2000",
                meals: [
                    "Breakfast: Greek yogurt with honey and walnuts",
                    "Lunch: Grilled fish with quinoa and vegetables",
                    "Snack: Hummus with carrot sticks",
                    "Dinner: Grilled lamb with roasted vegetables"
                ]
            },
            {
                dietitian: "Dr. Sarah Lee",
                dietType: "Paleo",
                calories: "1700",
                meals: [
                    "Breakfast: Scrambled eggs with spinach and mushrooms",
                    "Lunch: Grilled chicken with sweet potatoes",
                    "Snack: Fresh fruit and nuts",
                    "Dinner: Grilled salmon with asparagus"
                ]
            }
        ];

        function generateDefaultCards() {
            const cardsContainer = document.getElementById("cards-container");

            defaultPlans.forEach(plan => {
                const card = document.createElement("div");
                card.className = "card";

                const mealsList = plan.meals.map(meal => `<li>${meal}</li>`).join("");

                card.innerHTML = `
                    <h3><i class="fas fa-user-md"></i> ${plan.dietitian}</h3>
                    <p><strong>Diet Type:</strong> ${plan.dietType}</p>
                    <p><strong>Calories:</strong> ${plan.calories}</p>
                    <ul>${mealsList}</ul>
                `;

                cardsContainer.appendChild(card);
            });  
        }

        // Generate default cards on page load
        generateDefaultCards();
    </script>
</body>
</html>