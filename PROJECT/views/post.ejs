<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post a Blog</title>
    <link rel="stylesheet" href="/FFSD_blog/public/post.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <style>
      body {
          font-family: 'Poppins', sans-serif;
          background-color: #f4f4f4;
          margin: 0;
          padding: 0;
          transition: background 0.3s ease-in-out;
      }

      .container {
          max-width: 800px;
          background: white;
          margin: 30px auto;
          padding: 20px;
          border-radius: 8px;
          box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
      }

      h2 {
          text-align: center;
          color: #28a745;
      }

      label {
          font-weight: bold;
          margin-top: 10px;
          display: block;
      }

      input, textarea, select {
          width: 100%;
          padding: 10px;
          margin-top: 5px;
          border: 1px solid #ddd;
          border-radius: 5px;
      }

      .image-preview {
          width: 50%;
          max-height: 250px;
          margin-top: 10px;
          display: none;
          border-radius: 5px;
      }

      .submit-btn {
          background-color: #28a745;
          color: white;
          padding: 10px 15px;
          font-size: 16px;
          border: none;
          border-radius: 5px;
          margin-top: 15px;
          cursor: pointer;
          display: block;
          width: 100%;
      }

      .submit-btn:hover {
          background-color: #218838;
      }

      /* Theme Colors */
      .theme-weight-loss {
          background: #ffe6e6;
      }

      .theme-healthy-eating {
          background: #e6ffe6;
      }

      .theme-fitness {
          background: #e6f2ff;
      }

      .theme-motivation {
          background: #fff0e6;
      }
      #cross {
        position: fixed;
        top: 5px;
        left: 10px;
        line-height: 20px;
        font-size: 40px;
        border-radius: 100%;
    }
    </style>   
</head>
<body>

<!-- Back Button -->
<div id="cross" class="btn btn-outline-success" onclick="window.history.back();">
    <i class="fa-solid fa-xmark"></i>
</div>

  <div class="container">
    <h2>Post a Blog</h2>

    <form action="/blog-submit" method="POST" enctype="multipart/form-data">
        <label for="blogTitle">Blog Title:</label>
        
                    <label for="themeSelector">Select Blog Theme:</label>
                    <select id="themeSelector" name="theme">
                        <option value="">Default</option>
                        <option value="weight loss">Weight Loss</option>
                        <option value="healthy eating">Healthy Eating</option>
                        <option value="fitness">Fitness & Exercise</option>
                        <option value=" mindset & motivation">Mindset & Motivation</option>
                    </select>
        <input type="text" id="blogTitle" name="title" placeholder="Enter blog title..." required>

        <label for="blogContent">Blog Content:</label>
        <textarea id="blogContent" name="content" rows="6" placeholder="Write your blog content here..." required></textarea>

        <label for="imageUpload">Upload an Image:</label>
        <input type="file" id="imageUpload" name="image" accept="image/*">

        <img id="imagePreview" class="image-preview" alt="Image Preview">

        <button class="submit-btn" type="submit">Post Blog</button>
    </form>
</div>

    <script>
        document.getElementById('imageUpload').addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function() {
                    const imagePreview = document.getElementById('imagePreview');
                    imagePreview.src = reader.result;
                    imagePreview.style.display = "block";
                };
                reader.readAsDataURL(file);
            }
        });
    </script>

</body>
</html>
