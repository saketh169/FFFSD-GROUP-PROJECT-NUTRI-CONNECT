<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= dietitian.name || 'Dietitian Profile' %> | NutriConnect</title>
    <link rel="stylesheet" href="/css/dietitian_info.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
</head>
<body>
    <% try { %>
        <%- include('partials/header') %>
    <% } catch (e) { %>
        <!-- Header not found, skipping -->
    <% } %>

    <div class="container mt-4">
        <div class="row">
            <!-- Dietitian Profile Section -->
            <div class="col-md-4">
                <div class="card">
                    <img src="<%= dietitian.profileImage || '/images/default-profile.jpg' %>" class="card-img-top" alt="<%= dietitian.name || 'Dietitian' %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= dietitian.name || 'Unknown Dietitian' %></h5>
                        <p class="card-text"><%= dietitian.title || 'Nutrition Specialist' %></p>
                        <div class="rating">
                            <% for(let i = 0; i < Math.floor(dietitian.rating || 0); i++) { %>
                                <i class="fas fa-star text-warning"></i>
                            <% } %>
                            <% if(dietitian.rating && dietitian.rating % 1 !== 0) { %>
                                <i class="fas fa-star-half-alt text-warning"></i>
                            <% } %>
                            <span class="ml-2">(<%= dietitian.rating || 'N/A' %>)</span>
                        </div>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="card mt-3">
                    <div class="card-body">
                        <h6>Contact Information</h6>
                        <p><i class="fas fa-map-marker-alt"></i> <%= dietitian.location || 'Not specified' %></p>
                        <p><i class="fas fa-language"></i> <%= dietitian.languages && dietitian.languages.length ? dietitian.languages.join(', ') : 'Not specified' %></p>
                        <p><i class="fas fa-video"></i> <%= dietitian.online ? 'Online Consultation Available' : 'Online Consultation Not Available' %></p>
                        <p><i class="fas fa-building"></i> <%= dietitian.offline ? 'Offline Consultation Available' : 'Offline Consultation Not Available' %></p>
                        <p><i class="fas fa-rupee-sign"></i> ₹<%= dietitian.fees || 'N/A' %> per session</p>
                    </div>
                </div>
            </div>

            <!-- Main Content Section -->
            <div class="col-md-8">
                <!-- About Section -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">About</h5>
                        <p class="card-text"><%= dietitian.description || dietitian.about || 'No description available.' %></p>
                    </div>
                </div>

                <!-- Specialization Section -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Specialization</h5>
                        <div class="specialization-tags">
                            <% (dietitian.specialties || dietitian.specialization || []).forEach(specialty => { %>
                                <span class="badge badge-primary mr-2 mb-2"><%= specialty %></span>
                            <% }); %>
                        </div>
                    </div>
                </div>

                <!-- Education Section -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Education</h5>
                        <ul class="list-unstyled">
                            <% (dietitian.education || []).forEach(edu => { %>
                                <li><i class="fas fa-graduation-cap"></i> <%= edu %></li>
                            <% }); %>
                        </ul>
                    </div>
                </div>

                <!-- Expertise Section -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Expertise</h5>
                        <ul class="list-unstyled">
                            <% (dietitian.expertise || []).forEach(exp => { %>
                                <li><i class="fas fa-check-circle"></i> <%= exp %></li>
                            <% }); %>
                        </ul>
                    </div>
                </div>

                <!-- Certifications Section -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Certifications</h5>
                        <ul class="list-unstyled">
                            <% (dietitian.certifications || []).forEach(cert => { %>
                                <li><i class="fas fa-certificate"></i> <%= cert.name %> (<%= cert.year %>) - <%= cert.issuer %></li>
                            <% }); %>
                        </ul>
                    </div>
                </div>

                <!-- Testimonials Section -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Testimonials</h5>
                        <div class="testimonials">
                            <% (dietitian.testimonials || []).forEach(testimonial => { %>
                                <div class="testimonial-item mb-3">
                                    <p class="testimonial-text">"<%= testimonial.text %>"</p>
                                    <p class="testimonial-author">- <%= testimonial.author %> (<%= testimonial.rating %> Stars)</p>
                                </div>
                            <% }); %>
                        </div>
                        <% if(user) { %>
                            <button class="btn btn-primary" data-toggle="modal" data-target="#addTestimonialModal">
                                Add Testimonial
                            </button>
                        <% } %>
                    </div>
                </div>

                <!-- Booking Section -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Book Appointment</h5>
                        <div class="booking-form">
                            <div class="form-group">
                                <label for="bookingDate">Select Date</label>
                                <input type="date" class="form-control" id="bookingDate" min="<%= new Date().toISOString().split('T')[0] %>" data-dietitian-id="<%= dietitian._id %>">
                            </div>
                            <div class="form-group">
                                <label>Available Slots</label>
                                <div id="availableSlots" class="slots-container"></div>
                            </div>
                            <div class="form-group">
                                <label>Your Bookings</label>
                                <div id="userBookings" class="bookings-container"></div>
                            </div>
                            <div id="confirmation" class="hidden"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Testimonial Modal -->
    <div class="modal fade" id="addTestimonialModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Testimonial</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="testimonialForm">
                        <div class="form-group">
                            <label for="testimonialText">Your Review</label>
                            <textarea class="form-control" id="testimonialText" rows="3" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="testimonialRating">Rating</label>
                            <select class="form-control" id="testimonialRating" required>
                                <option value="5">5 Stars</option>
                                <option value="4">4 Stars</option>
                                <option value="3">3 Stars</option>
                                <option value="2">2 Stars</option>
                                <option value="1">1 Star</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="submitTestimonial">Submit</button>
                </div>
            </div>
        </div>
    </div>

    <% try { %>
        <%- include('partials/footer') %>
    <% } catch (e) { %>
        <!-- Footer not found, skipping -->
    <% } %>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Pass dietitian ID to JS
        window.dietitianId = '<%= dietitian._id || "" %>';
    </script>
    <script src="/js/dietitian-info.js"></script>
</body>
</html>