<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Dietitian Info Page </title>
  
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<style>
  :root {
    --primary-color: #006936;
    --secondary-color: #a8e6bb;
    --accent-color: #e1f7e1;
    --text-color: #2d502c;
    --background-color: #e0f2e9;
    --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    --transition-speed: 0.3s;
}
body{
  background-color: #D2F0C8;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.container {
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
   
}

#cross {
    position: fixed;
    top: 5px;
    left: 10px;
    line-height: 20px;
    font-size: 40px;
    border-radius: 100%;
    cursor: pointer;
}

.dietitian-detail {
    background-color: white;
    border-radius: 15px;
    box-shadow: var(--shadow);
    padding: 40px;
    margin: 40px auto;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 30px;
    align-items: start;
    border:4px double #28a745;
}

.dietitian-detail .image-section {
    text-align: center;
}

.dietitian-detail .image-section img {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    border: 8px solid var(--secondary-color);
    object-fit: cover;
    margin-bottom: 20px;
}

.dietitian-detail .image-section h3 {
    color: var(--primary-color);
    margin-bottom: 15px;
    font-size: 1.5rem;
}

.dietitian-detail .image-section .specialties {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 5px;
    margin-top: 10px;
}

.dietitian-detail .image-section .specialty-tag {
    background-color: var(--secondary-color);
    color: var(--primary-color);
    padding: 5px 10px;
    border-radius: 20px;
    font-size: 0.8rem;
}

.dietitian-detail .info-section h2 {
    color: var(--primary-color);
    margin-bottom: 15px;
    font-size: 2rem;
}

.dietitian-detail .info-section .bio {
    margin-bottom: 20px;
    line-height: 1.8;
}

.dietitian-detail .info-section .detail-card {
    background-color: var(--accent-color);
    padding: 15px;
    border-radius: 10px;
    margin-top: 20px;
}

.dietitian-detail .info-section .detail-card h3 {
    color: var(--primary-color);
    margin-bottom: 10px;
    display: flex;
    align-items: center;
}

.dietitian-detail .info-section .detail-card h3 i {
    margin-right: 10px;
}

.dietitian-detail .info-section .detail-card ul {
    list-style: none;
}

.dietitian-detail .info-section .detail-card ul li {
    margin-bottom: 5px;
    padding-left: 20px;
    position: relative;
}

.dietitian-detail .info-section .detail-card ul li:before {
    content: "â€¢";
    color: var(--primary-color);
    position: absolute;
    left: 0;
}

.dietitian-detail .info-section .testimonials {
    background-color: var(--secondary-color);
    padding: 20px;
    border-radius: 10px;
    margin-top: 30px;
}

.dietitian-detail .info-section .testimonials h3 {
    color: var(--primary-color);
    margin-bottom: 15px;
    font-size: 1.5rem;
}

.dietitian-detail .info-section .testimonials .testimonial {
    background-color: white;
    padding: 20px;
    border-radius: 10px;
    margin-bottom: 20px;
    position: relative;
}

.dietitian-detail .info-section .testimonials .testimonial:last-child {
    margin-bottom: 0;
}

.dietitian-detail .info-section .testimonials .testimonial .testimonial-text {
    font-style: italic;
    margin-bottom: 10px;
}

.dietitian-detail .info-section .testimonials .testimonial .testimonial-author {
    font-weight: bold;
    text-align: right;
}

@media (max-width: 992px) {
    .dietitian-detail {
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .dietitian-detail .image-section {
        text-align: center;
        margin-bottom: 20px;
    }
}

@media (max-width: 768px) {
    .dietitian-detail {
        padding: 20px;
    }

    .dietitian-detail .image-section img {
        width: 150px;
        height: 150px;
    }

    .dietitian-detail .info-section h2 {
        font-size: 1.8rem;
    }
}

@media (max-width: 576px) {
    .container {
        width: 95%;
    }

    .dietitian-detail {
        padding: 20px;
    }

    .dietitian-detail .image-section img {
        width: 120px;
        height: 120px;
    }

    .dietitian-detail .info-section h2 {
        font-size: 1.5rem;
    }
}
</style>

<body>
   
   
   <div class="container">
    
<!-- Back Button -->
<div id="cross" class="btn btn-outline-success" onclick="window.history.back();">
  <i class="fa-solid fa-xmark"></i>
</div>
    <div class="dietitian-detail">
        <div class="image-section">
            <img src="<%= dietitian.image %>" alt="<%= dietitian.name %>">
            <h3><%= dietitian.title || 'Registered Dietitian' %></h3>
            <div class="specialties">
                <% if (dietitian.specialties && dietitian.specialties.length > 0) { %>
                    <% dietitian.specialties.forEach(specialty => { %>
                        <span class="specialty-tag"><%= specialty %></span>
                    <% }) %>
                <% } %>
            </div>
        </div>
        <div class="info-section">
            <h2><%= dietitian.name %></h2>
            <div class="bio">
                <p><%= dietitian.description %></p>
            </div>
            <div class="detail-card">
                <h3><i class="fas fa-graduation-cap"></i> Education & Certifications</h3>
                <ul>
                    <% if (dietitian.education && dietitian.education.length > 0) { %>
                        <% dietitian.education.forEach(item => { %>
                            <li><%= item %></li>
                        <% }) %>
                    <% } else { %>
                        <li>Registered Dietitian Nutritionist (RDN)</li>
                        <li>Master's in Nutrition Science</li>
                    <% } %>
                </ul>
            </div>
            <div class="detail-card">
                <h3><i class="fas fa-stethoscope"></i> Areas of Expertise</h3>
                <ul>
                    <% if (dietitian.expertise && dietitian.expertise.length > 0) { %>
                        <% dietitian.expertise.forEach(item => { %>
                            <li><%= item %></li>
                        <% }) %>
                    <% } else { %>
                        <li>Weight Management</li>
                        <li>Nutrition Counseling</li>
                        <li>Medical Nutrition Therapy</li>
                    <% } %>
                </ul>
            </div>
            <% if (dietitian.testimonials && dietitian.testimonials.length > 0) { %>
            <div class="testimonials">
                <h3><i class="fas fa-quote-left"></i> Client Testimonials</h3>
                <% dietitian.testimonials.forEach(testimonial => { %>
                    <div class="testimonial">
                        <p class="testimonial-text">"<%= testimonial.text %>"</p>
                        <p class="testimonial-author">- <%= testimonial.author %></p>
                    </div>
                <% }) %>
            </div>
            <% } %>
        </div>
    </div>
    
      <script src="Links/js/bootstrap.bundle.min.js"></script>
</body>
</html>